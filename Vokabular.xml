<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_all.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_all.rng" type="application/xml"
	schematypens="http://purl.oclc.org/dsdl/schematron"?>
<!-- 
   Die folgende DTD und die Auszeichnungen des Attributs @xml:id in
   verschiedenen Elementen ist nötig, damit XInclude und XPointer mit
   'bare names' in verschiedenen XML-Anwendungen funktionieren.
   
   Vgl. https://www.w3.org/TR/WD-xptr#bare-names
   Vgl. https://stackoverflow.com/questions/50294372/trying-to-use-xinclude-with-java-and-resolving-the-fragment-with-xmlid/50332840#50332840
   Vgl. https://github.com/mojohaus/xml-maven-plugin/issues/61
   
   oXygen kommt auch ohne diese DTD aus, aber das xml-maven-plugin nicht.
-->
<!DOCTYPE TEI [
   <!ATTLIST encodingDesc xml:id ID #IMPLIED>
   <!ATTLIST metDecl xml:id ID #IMPLIED>
]>
<TEI xmlns="http://www.tei-c.org/ns/1.0">
   <teiHeader>
      <fileDesc>
         <titleStmt>
            <title>Annotationsvokabular für die Edition</title>
         </titleStmt>
         <publicationStmt>
            <p>Publication Information</p>
         </publicationStmt>
         <sourceDesc>
            <p/>
         </sourceDesc>
      </fileDesc>
      <encodingDesc xml:id="encodingDesc">
         <variantEncoding method="parallel-segmentation" location="internal"/>
         <metDecl xml:id="metDecl">
            <metSym value="ar-Ragaz"><note type="translations">
                  <term xml:lang="ar">الرجز</term> = <term xml:lang="de">ar-Raǧaz</term>
               </note></metSym>
            <metSym value="as-Sari"><note type="translations">
                  <term xml:lang="ar">السريع</term> = <term xml:lang="de">as-Sarīʿ</term>
               </note></metSym>
            <metSym value="al-Kamil"><note type="translations">
                  <term xml:lang="ar">الكامل</term> = <term xml:lang="de">al-Kāmil</term>
               </note></metSym>
            <metSym value="al-Wafir"><note type="translations">
                  <term xml:lang="ar">الوافر</term> = <term xml:lang="de">al-Wāfir</term>
               </note></metSym>
            <metSym value="al-Hazag"><note type="translations">
                  <term xml:lang="ar">الهزج</term> = <term xml:lang="de">al-Hazaǧ</term>
               </note></metSym>
            <metSym value="al-Mutaqarib"><note type="translations">
                  <term xml:lang="ar">المتقارب</term> = <term xml:lang="de">al-Mutaqārib</term>
               </note></metSym>
            <metSym value="at-Tawil"><note type="translations">
                  <term xml:lang="ar">الطويل</term> = <term xml:lang="de">aṭ-Ṭawīl</term>
               </note></metSym>
            <metSym value="al-Mudari"><note type="translations">
                  <term xml:lang="ar">المضارع</term> = <term xml:lang="de">al-Muḍāriʿ</term>
               </note></metSym>
            <metSym value="al-Mutadarik"><note type="translations">
                  <term xml:lang="ar">المتدارك</term> = <term xml:lang="de">al-Mutadārik</term>
               </note></metSym>
            <metSym value="al-Basit"><note type="translations">
                  <term xml:lang="ar">البسيط</term> = <term xml:lang="de">al-Basīṭ</term>
               </note></metSym>
            <metSym value="al-Munsarih"><note type="translations">
                  <term xml:lang="ar">المنسرح</term> = <term xml:lang="de">al-Munsariḥ</term>
               </note></metSym>
            <metSym value="al-Muqtadab"><note type="translations">
                  <term xml:lang="ar">المقتضب</term> = <term xml:lang="de">al-Muqtaḍab</term>
               </note></metSym>
            <metSym value="ar-Ramal"><note type="translations">
                  <term xml:lang="ar">الرمل</term> = <term xml:lang="de">ar-Ramal</term>
               </note></metSym>
            <metSym value="al-Madid"><note type="translations">
                  <term xml:lang="ar">المديد</term> = <term xml:lang="de">al-Madīd</term>
               </note></metSym>
            <metSym value="al-Hafif"><note type="translations">
                  <term xml:lang="ar">الخفيف</term> = <term xml:lang="de">al-Ḫafīf</term>
               </note></metSym>
            <metSym value="al-Mugtatt"><note type="translations">
                  <term xml:lang="ar">المجتث</term> = <term xml:lang="de">al-Muǧtaṯṯ</term>
               </note></metSym>
         </metDecl>
         <classDecl>
            <!-- Taxonomie, die für name/@type verwendet wird -->
            <taxonomy xml:id="object">
               <category xml:id="animal">
                  <catDesc xml:lang="de">Tier</catDesc>
                  <catDesc xml:lang="en">animal</catDesc>
                  <category xml:id="animal.wild">
                     <catDesc xml:lang="de">Wildtier</catDesc>
                     <catDesc xml:lang="en">wild animal</catDesc>
                  </category>
                  <category xml:id="animal.domestic">
                     <catDesc xml:lang="de">Haustier</catDesc>
                     <catDesc xml:lang="en">domestic animal</catDesc>
                  </category>
               </category>
               <category xml:id="plant">
                  <catDesc xml:lang="de">Pflanze</catDesc>
                  <catDesc xml:lang="en">plant</catDesc>
               </category>
               <category xml:id="artifact">
                  <catDesc xml:lang="de">Artefakt</catDesc>
                  <catDesc xml:lang="en">artifact</catDesc>
                  <category xml:id="tool">
                     <catDesc xml:lang="de">Werkzeug</catDesc>
                     <catDesc xml:lang="en">tool</catDesc>
                  </category>
                  <category xml:id="building">
                     <catDesc xml:lang="de">Gebäude</catDesc>
                     <catDesc xml:lang="en">building</catDesc>
                  </category>
                  <category xml:id="food">
                     <catDesc xml:lang="de">Speise</catDesc>
                     <catDesc xml:lang="en">food</catDesc>
                  </category>
               </category>
               <category xml:id="profession">
                  <catDesc xml:lang="de">Beruf</catDesc>
                  <catDesc xml:lang="en">profession</catDesc>
               </category>
            </taxonomy>
            <!-- Typen von seg-Elementen: Taxonmie für seg/@type + seg/@subtype -->
            <taxonomy xml:id="segment">
               <category xml:id="verbatim">
                  <catDesc xml:lang="de">Wortgetreues Zitat</catDesc>
                  <catDesc xml:lang="en">Verbatim quotation</catDesc>
                  <category xml:id="verbatim-holy">
                     <catDesc xml:lang="de">Wortgetreues Zitat aus dem heiligen Text</catDesc>
                     <catDesc xml:lang="en">Verbatim quotation from the holy text</catDesc>
                  </category>
               </category>
               <category xml:id="analogous">
                  <catDesc xml:lang="de">Sinngemäßes Zitat</catDesc>
                  <catDesc xml:lang="en">Analogous quotation</catDesc>
               </category>
            </taxonomy>
         </classDecl>
      </encodingDesc>
   </teiHeader>
   <text>
      <body>
         <p>Der Hauptteil dieser Datei bleibt leer. Das Wichtige steht im Kopf der Datei.</p>
      </body>
   </text>
</TEI>
